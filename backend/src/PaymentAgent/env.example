# Environment Variables for Payment Agent

# Required: Gemini AI API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Required: Stripe Secret Key (use test key for development)
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Optional: Payment Agent Configuration
PAYMENT_AGENT_ENABLE_BROWSER=true
PAYMENT_AGENT_HEADLESS=true
PAYMENT_AGENT_TIMEOUT=60000
PAYMENT_AGENT_SCREENSHOT_ON_ERROR=false
